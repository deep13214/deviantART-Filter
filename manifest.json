{
  "manifest_version": 2,
  "name": "<%= package.title || package.name %>",
  "version": "<%= package.version %>",
  "description": "<%= package.description %>",
  "homepage_url": "<%= package.homepage %>",
  "icons": {
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.deviantart.com/*"
      ],
      "css": [
        "css/dialog-polyfill.css",
        "css/<%= package.name %>.css"
      ],
      "js": [
        "js/dialog-polyfill.js",
        "js/jquery.slim.min.js",
        "js/jquery.daModal.js",
        "js/<%= package.name %>.js"
      ]
    }
  ],
  "permissions": [
    "*://*.deviantart.com/*"
  ]
}
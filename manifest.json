{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "version": "<%= package.version %>",
  "description": "__MSG_ExtensionDescription__",
  "homepage_url": "<%= package.homepage %>",
  "default_locale": "en",

  "icons": {
    "12": "/icons/icon-16.png",
    "24": "/icons/icon-24.png",
    "32": "/icons/icon-32.png",
    "48": "/icons/icon-48.png",
    "64": "/icons/icon-64.png",
    "96": "/icons/icon-96.png",
    "128": "/icons/icon-128.png"
  },

  "applications": {
    "gecko": {
      "id": "{a2ce7c11-e47d-42cf-b6db-ede36265cf6c}",
      "strict_min_version": "42.0"
    }
  },

  "permissions": [
    "*://*.deviantart.com/*",
    "activeTab",
    "history",
    "tabs",
    "storage"
  ],

  "options_ui": {
    "page": "pages/options/options.html",
    "browser_style": true
  },

  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*.deviantart.com/*"
      ],
      "css": [
        "includes/angular-csp.css",
        "css/content.css"
      ],
      "js": [
        "vendor/browser-polyfill.min.js",
        "vendor/jquery.min.js",
        "vendor/angular.min.js",
        "vendor/bootstrap.min.js",
        "vendor/ui-bootstrap-tpls.js",
        "includes/jquery.daModal.js",
        "components/management-panel.js",
        "components/filter-panel.js",
        "components/options-panel.js",
        "scripts/content.js"
      ]
    }
  ],

  "page_action": {
    "browser_style": true,
    "default_icon": "images/logo/logo-gray.svg",
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "pages/popup/popup.html"
  },

  "web_accessible_resources": [
    "icons/*"
  ]
}
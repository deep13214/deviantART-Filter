{
  "author": "<%= pkg.author %>",

  "minimum_edge_version": "33.14281.1000.0",

  "browser_specific_settings": {
    "edge": {
      "browser_action_next_to_addressbar": true
    }
  },

  "permissions": [
    "*://*.deviantart.com/*",
    "*://*/*",
    "history",
    "notifications",
    "tabs",
    "storage"
  ],

  "background": {
    "persistent": true
  },

  "page_action": {
    "default_icon": {
      "20": "images/logo/logo-red-16.png",
      "25": "images/logo/logo-red-16.png",
      "30": "images/logo/logo-red-32.png",
      "40": "images/logo/logo-red-48.png"
    }
  }
}
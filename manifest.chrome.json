{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "version": "<%= package.version %>",
  "version_name": "<%= package.version %> Beta 1",
  "description": "__MSG_ExtensionDescription__",
  "homepage_url": "<%= package.homepage %>",
  "default_locale": "en",

  "icons": {
    "16": "images/logo/logo-red-16.png",
    "32": "images/logo/logo-red-32.png",
    "48": "images/logo/logo-red-48.png",
    "64": "images/logo/logo-red-64.png"
  },

  "permissions": [
    "*://*.deviantart.com/*",
    "activeTab",
    "history",
    "notifications",
    "tabs",
    "storage"
  ],

  "options_ui": {
    "page": "pages/options/options.html"
  },

  "background": {
    "scripts": [
      "vendor/browser-polyfill.min.js",
      "scripts/background.js"
    ]
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*.deviantart.com/*"
      ],
      "css": [
        "css/content.css"
      ],
      "js": [
        "vendor/browser-polyfill.min.js",
        "scripts/content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "page_action": {
    "browser_style": true,
    "default_icon": "images/logo/logo-red-16.png",
    "default_title": "__MSG_ExtensionName__"
  },

  "web_accessible_resources": [
    "css/*",
    "images/*",
    "includes/*"
  ]
}